<%#= stylesheet_link_tag "bootstrap.vertical-tabs" %>
<div class="col-xs-3"> <!-- required for floating -->
  <!-- Nav tabs -->
  <ul class="nav nav-tabs tabs-left">
     <li class="active"><a href=<%= "#active_events" %> data-toggle="tab">Active Events</a></li>
     <li><a href=<%= "#pending_events" %> data-toggle="tab">Pending Events</a></li>
    <li><a href=<%= "#completed_events" %> data-toggle="tab">CompletedEvents</a></li>
  </ul>
</div>

<div class="col-xs-9">
  <!-- Tab panes -->
  <div class="tab-content">
    <div class="tab-pane active" id=<%= "active_events" %>>
      <% if @active_events.present? %>
        <table class="table table-striped ">
        <thead>
        <th>Event Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Location</th>
        </thead>
        <tbody>
          <% @active_events.each do |active_event| %>
            <tr>
              <td class="col-md=4"><%= link_to active_event.try(:event_name), event_path(active_event) %></td>
              <td class="col-md=4"><%= active_event.try(:start_date).to_date %></td>
              <td class="col-md=4"><%= active_event.try(:end_date).to_date %></td>
              <td class="col-md=4"><%= active_event.try(:event_detail).try(:location) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% else %>
          <h4>No event found.</h4>
      <% end %>
    </div>

    <div class="tab-pane" id=<%= "pending_events" %>>
      <% if @pending_events.present? %>
        <table class="table table-striped ">
        <thead>
        <th>Event Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Location</th>
        </thead>
        <tbody>
        <% @pending_events.each do |pending_event| %>
            <tr>
              <td class="col-md=4"><%= link_to pending_event.try(:event_name), event_path(pending_event) %></td>
              <td class="col-md=4"><%= pending_event.try(:start_date).to_date %></td>
              <td class="col-md=4"><%= pending_event.try(:end_date).to_date %></td>
              <td class="col-md=4"><%= pending_event.try(:event_detail).try(:location) %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <% else %>
        <h4>No event found.</h4>
      <% end %>
    </div>

    <div class="tab-pane" id=<%= "completed_events" %>>
      <% if @completed_events.present? %>
        <table class="table table-striped ">
        <thead>
        <th>Event Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Location</th>
        </thead>
        <tbody>
        <% @completed_events.each do |completed_event| %>
            <tr>
              <td class="col-md=4"><%= link_to completed_event.try(:event_name), event_path(completed_event) %></td>
              <td class="col-md=4"><%= completed_event.try(:start_date).to_date %></td>
              <td class="col-md=4"><%= completed_event.try(:end_date).to_date %></td>
              <td class="col-md=4"><%= completed_event.try(:event_detail).try(:location) %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <% else %>
          <h4>No event found.</h4>
      <% end %>
    </div>
  </div>
</div>